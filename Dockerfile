FROM ubuntu:24.10

###############################################################################
## Setup user #################################################################
###############################################################################
ARG USER=root
ENV HOME=/home/$USER
RUN \
  apt-get update && apt-get install -y \
  sudo \
  adduser && \
  apt-get autoremove --purge && apt-get autoclean

###############################################################################
## Copy binaries ##############################################################
###############################################################################
RUN mkdir -p ~/.local/bin
COPY bin ~/.local/bin

###############################################################################
## Install programs ###########################################################
###############################################################################
COPY init_scripts $HOME/init_scripts
COPY init.sh $HOME/init.sh
RUN \
  $HOME/init.sh $USER && \
  rm -rf $HOME/init_scripts && \
  rm $HOME/init.sh

###############################################################################
## Complete user setup ########################################################
###############################################################################
WORKDIR $HOME/host

ENTRYPOINT ["tmux", "-u"]
